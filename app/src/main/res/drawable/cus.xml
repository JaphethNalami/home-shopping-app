<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#010509" /> <!-- Background color -->
            <corners android:radius="5dp" /> <!-- Border radius in dp -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#055290" /> <!-- Border color (black) -->
            <corners android:radius="5dp" /> <!-- Border radius in dp -->
        </shape>
    </item>
</layer-list>